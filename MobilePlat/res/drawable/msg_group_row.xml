<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <stroke
                android:width="0.5dip"
                android:color="#838A90" />

            <gradient
                android:angle="-90"
                android:centerColor="#AEB7C0"
                android:endColor="#B7C0C7"
                android:startColor="#95A3AE"
                android:type="linear" />
        </shape>
    </item>
    <item android:top="1dip"
        android:left="-1dip"
        android:right="-1dip"
        android:bottom="-1dip">
        <shape>
            <stroke
                android:width="1dip"
                android:color="#A7B1BA" />

            <gradient
                android:angle="-90"
                android:centerColor="#AEB7C0"
                android:endColor="#B7C0C7"
                android:startColor="#95A3AE"
                android:type="linear" />
        </shape>
    </item>

</layer-list>