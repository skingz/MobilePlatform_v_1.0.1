<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    xmlns:onclickbackgroud="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_activity"
    tools:context=".ActivityAbout" >

    <com.leading.baselibrary.ui.TitleBarLayout
        android:id="@+id/about_tbl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="0dip"
        titlebar:TextView_Name="@string/app_name" >
    </com.leading.baselibrary.ui.TitleBarLayout>
    
<TextView
        android:id="@+id/tv_thisAppDescriable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/about_tbl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="移动办公平台" />

<TextView
        android:id="@+id/tv_downUrititle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_thisAppDescriable"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />
<TextView
        android:id="@+id/tv_downUriMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_downUrititle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:text="下载连接:" />

    <ImageView
        android:id="@+id/imgView_QR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_downUriMsg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/widget_kv_single" />
    
 <ProgressBar
       android:id="@+id/pgBar_Loading"
       style="?android:attr/progressBarStyleLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:layout_marginTop="50dip"
       android:layout_below="@+id/imgView_QR"/>
    

</RelativeLayout>