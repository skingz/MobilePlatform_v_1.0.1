<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgViewPluginIcon_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/alert_dark_frame" />

    <TextView
        android:id="@+id/txtViewPluginLable_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgViewPluginIcon_server"
        android:text="TextViewName" />
     <TextView
        android:id="@+id/txtViewRemark_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtViewPluginLable_server"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textColor="#3CB371"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtViewPluginVersion_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewPluginLable_server"
        android:layout_toRightOf="@+id/imgViewPluginIcon_server"
        android:text="TextView"
        android:textColor="#A9A9A9"
        android:textSize="12sp" />

        <TextView
            android:id="@+id/txtViewPluginSize_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtViewPluginVersion_server"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/txtViewPluginVersion_server"
            android:text="size"
            android:textColor="#A9A9A9"
            android:textSize="12sp" />
         <TextView
            android:id="@+id/txtViewPluginUpdateTime_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtViewPluginVersion_server"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/txtViewPluginSize_server"
            android:text="updateTime"
            android:textColor="#A9A9A9"
            android:textSize="12sp" />

    <TextView
        android:id="@+id/txtBtnInstall_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="33dp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/icon_download"
        android:textColor="#66CDAA"/>
     <TextView
        android:id="@+id/txtBtnPause_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="33dp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/icon_pause"
        android:textColor="#66CDAA"
        android:visibility="gone" />
         <TextView
            android:id="@+id/txtViewPluginInfo_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewPluginUpdateTime_server"
            android:layout_toRightOf="@+id/imgViewPluginIcon_server"
            android:text="describle"
            android:visibility="gone"
            android:textSize="12sp" />
	
	<ProgressBar
	    android:id="@+id/progressBar1"
	    style="?android:attr/progressBarStyleHorizontal"
	    android:layout_width="match_parent"
	    android:layout_height="3dp"
	    android:layout_marginTop="5dp"
	    android:layout_toRightOf="@+id/imgViewPluginIcon_server"
	    android:layout_marginRight="45dp"
	    android:layout_below="@+id/txtViewPluginInfo_server"
	    android:visibility="gone" />
	
	<TextView
	    android:id="@+id/tv_downValue"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/progressBar1"
	    android:layout_below="@+id/txtViewPluginInfo_server"
	    android:layout_marginLeft="-45dp"
	    android:textSize="10sp"
	    android:textColor="#66CDAA"
	    android:text="0%"
	    android:visibility="gone"/>
</RelativeLayout>