<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

   <item android:state_pressed="true">  
  <shape>  
	  <gradient android:startColor="#D23A16"  android:endColor="#990000" android:angle="270"/>  
	  <stroke android:width="1dp" android:color="#fff" />   
	  <corners android:radius="2dp" />   
	  <padding android:left="0dp" android:top="0dp"   android:bottom="0dp" android:right="0dp"/>   
   </shape>  
  </item>   
  
  <item android:state_focused="false">  
  <shape>  
	  <gradient android:startColor="#D23A16"  android:endColor="#990000" android:angle="270"/>   
	  <corners android:radius="3dp" />   
	  <padding android:left="1dp" android:top="1dp"   android:bottom="1dp" android:right="1dp"/>   
   </shape>  
  </item>  

</selector>