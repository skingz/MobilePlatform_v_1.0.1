<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="fill_parent" android:layout_height="50dip"
		android:paddingLeft="10dip" android:paddingRight="10dip"
		android:paddingTop="10dip" android:paddingBottom="10dip"
		android:background="@drawable/title_bg">

		<Button
		    android:id="@+id/titlebar_left_button"
		    android:layout_width="50dip"
		    android:layout_height="40dip"
		    android:layout_alignParentLeft="true"
		    android:background="@drawable/btn_bg"
		    android:text="&lt;返回"
		    android:textColor="#FFFFFF"
		    android:textSize="14sp"
		    android:visibility="invisible"/>

		<TextView android:id="@+id/titlebar_title_text"
			android:text="" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:textSize="20sp" android:textColor="#FFFFFF" />

		<Button
		    android:id="@+id/titlebar_right_button"
		    android:layout_width="60dip"
		    android:layout_height="40dip"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/btn_bg"
		    android:text="...."
		    android:textColor="#FFFFFF"
		    android:textSize="14sp"
		    android:visibility="invisible" />

	</RelativeLayout>