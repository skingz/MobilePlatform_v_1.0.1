<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="280dip"
    android:layout_height="match_parent"
    android:orientation="vertical">

     <LinearLayout android:id="@+id/layoutTitle"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center_horizontal"
        android:background="@drawable/r_corner_title_bg">
          <TextView
            android:id="@+id/tv_Title_Dailog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
			android:textSize="15sp" android:textColor="#FFFFFF" 
            android:text="温馨提示" />
        
    </LinearLayout>
        
    <LinearLayout android:id="@+id/layoutContent"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_Msg_Dailog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000" 
            android:textSize="17sp" 
            android:text="确认退出？" />
        
    </LinearLayout>
    <LinearLayout android:id="@+id/layoutButtom"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center_horizontal">
    <Button
        android:id="@+id/btn_cancel_Dailog"
        android:layout_width="80dip"
        android:layout_height="30dip"
        android:background="@drawable/btn_bg"
        android:text="取消" />

    <Button
        android:id="@+id/btn_OK_Dailog"
        android:layout_width="80dip"
        android:layout_height="30dip"
        android:layout_marginLeft="30dip"
        android:background="@drawable/btn_bg"
        android:text="确定" />
</LinearLayout>
</LinearLayout>